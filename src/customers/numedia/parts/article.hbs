<article class="uk-article full-article">
    <div class="article-header">
        <ul class="uk-nav categories">
            {{#each categories}}
                <li class="uk-inline"><a class="uk-inline uk-padding-small" href="{{href}}" data-object="category"
                        data-id="{{id}}">{{name}}</a></li>
            {{/each}}
        </ul>
        <h1 class="uk-article-title article-title uk-margin-small uk-margin-remove-top">{{{title}}}</h1>
        <div class="uk-text-left uk-padding-small uk-padding-remove-vertical article-meta">{{createdAgo}}</div>
    </div>

    {{#if image}}
    <div class="image-wrapper uk-margin-bottom ">
        <img class="uk-border-rounded uk-width-1-1 uk-responsive" data-src="{{image.url}}" width="{{image.width}}"
            height="{{image.height}}" alt="{{title}}" uk-img>
    </div>
    {{/if}}
    {{#if video}}
        <div class="video-wrapper uk-margin-bottom ">
            <iframe
                src="https://www.youtube-nocookie.com/embed/{{video}}?autoplay=0&amp;showinfo=0&amp;rel=0&amp;modestbranding=0&amp;playsinline=1"
                width="1120" height="630" frameborder="0" allowfullscreen uk-responsive
                uk-video="autoplay: false; automute: false"
                    ></iframe>
        </div>
    {{/if}}

    <div class="body-wrapper">
        {{{body}}}
    </div>

    <div class="article-footer uk-flex-middle " uk-grid>
        <div class="uk-width-expand">
            <a href="#{{author.href}}" class="article-author uk-flex-middle uk-link-muted uk-grid-small uk-inline"
                uk-grid>
                <span class="uk-width-auto">
                    <!-- <img class="uk-border-pill" data-src="{{author.image.url}}" width="{{author.image.width}}"
                        height="{{author.image.height}}" alt="{{author.name}}" uk-img> -->
                    {{{author.formattedImage}}}
                </span>
                <span class="uk-width-expand">
                    {{author.name}}
                </span>
            </a>
        </div>
        <div class="uk-width-auto">
            <div class="desktop-only">
                <span class="uk-inline uk-margin-small-left ">شارك:</span>
                <div class="share-wrapper uk-inline">
                    <a href="{{href}}" class="uk-icon-button uk-margin-small-left sn-twitter" uk-icon="twitter"
                        data-url="{{href}}" data-title="{{title}}"></a>
                    <a href="{{href}}" class="uk-icon-button  uk-margin-small-left sn-facebook" uk-icon="facebook"
                        data-url="{{href}}" data-title="{{title}}"></a>
                    <a href="{{href}}" class="uk-icon-button sn-google_plus" uk-icon="google-plus" data-url="{{href}}"
                        data-title="{{title}}"></a>
                </div>
            </div>
            <div class="mobile-only">
                <div class="uk-padding-xsmall">
                    <a href="#" class="uk-icon-link" uk-icon="icon: sharethis; ratio: .75;"> <span
                            class="uk-margin-small-left">شارك</span></a>
                    <div uk-dropdown="animation: uk-animation-slide-top-small; duration: 500; mode: click; pos: top-left"
                        class="uk-text-center uk-border-rounded dropdown-share uk-width-auto uk-box-shadow-small">
                        <a href="{{href}}" class="uk-icon-button uk-margin-small-left sn-twitter" uk-icon="twitter"
                            data-url="{{href}}" data-title="{{title}}"></a>
                        <a href="{{href}}" class="uk-icon-button  uk-margin-small-left sn-facebook" uk-icon="facebook"
                            data-url="{{href}}" data-title="{{title}}"></a>
                        <a href="{{href}}" class="uk-icon-button sn-google_plus" uk-icon="google-plus"
                            data-url="{{href}}" data-title="{{title}}"></a>
                    </div>
                </div>
            </div>

        </div>

    </div>


</article>