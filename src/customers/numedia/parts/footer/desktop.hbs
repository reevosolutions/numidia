<div class="uk-container">
    <div uk-grid>
        <div class="uk-width-1-3@s">
            <div class="widget widget-footer-1 uk-padding-large uk-padding-remove-vertical">
                <a class="" href="{{app.url}}">
                    <img data-src="{{app.logo}}" alt="{{app.name}}" uk-img>
                </a>
            </div>
        </div>
        <div class="uk-width-1-3@s">
            <div class="uk-text-center">
                <div class="widget widget-footer-social-links uk-text-center uk-inline">
                    <div class="title">تابعنا</div>
                    <ul class="uk-navbar-nav">
                        <li><a rel="noreferrer" target="_blank" href="{{app.social.facebook}}" class="uk-icon-link sn-hover-facebook"
                                uk-icon="icon: facebook; ratio: 1.2;"></a>
                        </li>
                        <li><a rel="noreferrer" target="_blank" href="{{app.social.instagram}}" class="uk-icon-link sn-hover-instagram"
                                uk-icon="icon: instagram; ratio: 1.2;"></a>
                        </li>
                        <li><a rel="noreferrer" target="_blank" href="{{app.social.twitter}}" class="uk-icon-link sn-hover-twitter"
                                uk-icon="icon: twitter; ratio: 1.2;"></a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="uk-width-1-3@s">
            <div class="widget widget-footer-contacts uk-padding-large uk-padding-remove-vertical">
                <div class="title">تواصل معنا</div>
                <ul class="uk-nav  uk-text-right" style="direction: ltr">
                    {{#each app.phoneNumbers}}
                        <li><a class="uk-padding-remove" href="tel:{{this}}">{{this}}</a>
                        </li>
                    {{/each}}
                    <li><a class="uk-padding-remove" href="mailto:{{app.email}}">{{app.email}}</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="uk-text-center">
        <div class="widget widget-footer-copyrights">
            <div class="uk-text-center uk-padding-small">
                {{{app.copyrights}}}
            </div>
        </div>
    </div>
</div>