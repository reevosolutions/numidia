<div class="article-card article-card-article-related uk-padding-xxsmall ">
    <div class="uk-box-shadow-hover-small uk-padding-xxsmall rv-hover-effect-3d uk-background-default uk-border-rounded uk-box-shadow-small">
        <div class="uk-card uk-grid uk-grid-small" uk-grid>
            <div class="uk-width-2-5">
                <div class="uk-card-media-right uk-cover-container uk-position-relative">
                    <a href="{{href}}" class="uk-display-block ">
                        <img data-src="{{image.url}}" width="{{image.width}}" height="{{image.height}}" alt="{{title}}"
                            class="uk-width-expand uk-border-rounded" uk-img>
                    </a>
                </div><!-- relative -->
            </div>
            <div class="uk-width-expand uk-position-relative">
                <div class="uk-card-body uk-padding-remove">
                    <h3 class="title uk-margin-xsmall"><a href="{{href}}" class="uk-display-block uk-link-text">{{{title}}}</a></h3>
                    <div class="description uk-text-small uk-text-muted">{{{description}}}</div>
                </div>
            </div>
        </div>
    </div>
</div>